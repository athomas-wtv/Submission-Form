@page
@model IndexModel
@{
    ViewData["Title"] = "IST Submission Form";
}

<form method="post">
  <div class="form-row">
    <div class="form-group col-md-4">
      <label for="firstName">First Name</label>
      <input type="text" class="form-control" name="FirstName" id="firstName" placeholder="First Name">
    </div>
    <div class="form-group col-md-4">
      <label for="lastName">Last Name</label>
      <input type="text" class="form-control" name="LastName" id="lastName" placeholder="Last Name">
    </div>
    <div class="form-group col-md-4">
      <label for="email">Email</label>
      <input type="email" class="form-control" name="Email" id="email" placeholder="Email">
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-12">
        <label for="title">Project Title</label>
        <input type="text" class="form-control" name="Title" id="title" placeholder="Project Title">
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-12">
      <label for="projectDescription">Project Description</label>
      <h6 class="card-subtitle mb-2 text-muted"><i>Describe what you want your application to do?</i></h6>
      <textarea type="text" class="form-control" name="ProjectDescription" id="projectDescription"></textarea>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-12">
      <label for="goal">End Goal</label>
      <h6 class="card-subtitle mb-2 text-muted"><i>What is the current issue and/or what goal would this app be accomplishing?</i></h6>
      <textarea type="text" class="form-control" name="Goal" id="goal"></textarea>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-4">
        <label for="timeline">Timeline</label>
        <h6 class="card-subtitle mb-2 text-muted"><i>How soon will you need this application?</i></h6>
        <select name="Timeline" id="timeline" class="form-control">
            <option selected>Select</option>
            <option>1 Month</option>
            <option>2 Months</option>
            <option>3-6 Months</option>
            <option>7-12 Months</option>
            <option>1-2 Years</option>
        </select>
    </div>
</div>
    <button type="submit" class="btn btn-info btn-lg btn-block">Submit</button>
</form>