@page
@model CancelRequestModel
@{
    ViewData["Title"] = "Cancel Request?";
}
<h2>@ViewData["Title"]</h2>
<form method="post">
    <div class="container mb-2">
        <div class="row">
            <div>
                <h4>Project Title</h4><hr>
                <p>@Html.DisplayFor(model => model.Submission.Title)</p>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <h4>@Html.DisplayNameFor(model => model.Submission.ProjectDescription)</h4><hr>
                <p>@Html.DisplayFor(model => model.Submission.ProjectDescription)</p>
            </div>
            <div class="col">
                <h4>@Html.DisplayNameFor(model => model.Submission.Goal)</h4><hr>
                <p>@Html.DisplayFor(model => model.Submission.Goal)</p>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-center mt-4">
        <a asp-page="Requester" class="btn btn-success mr-2">Go Back!</a>
        <button type="submit" class="btn btn-danger">Cancel Request</button>
    </div>
</form>